@model MessageData

<h3>Отправка сообщения</h3>
<form method="post" asp-controller="Authorized" asp-action="SendMessage">
    <p>
        <label asp-for="ReceiverEmail">Получатель</label><br />
        <input asp-for="ReceiverEmail" type="text" /> <br />
        <span asp-validation-for="ReceiverEmail" />
    </p>
    
    <p>
        <label asp-for="Message">Сообщение</label><br />
        <input asp-for="Message" type="text" /> <br />
        <span asp-validation-for="Message"/>
    </p>

    <input type="submit" value="Отправить"/>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>